			<div class="portlet light">
				<div class="portlet-body">
					<strong>品牌录入</strong>
					<div class="row">
						<form action="/admin/brand/create" method="post" enctype="multipart/form-data">
							<input type="text" class="hidden" value="<%=_csrf%>" name="_csrf" />
						<div class="col-md-3">
							<label>品牌名称：</label>
							<input type="text" name="brandName" />	
						</div>
						<div class="col-md-6">
							<input type="file" name="file" />
						</div>
						<div class="col-md-3">
							<input type="submit" />
						</div>
					</form>
					</div>
				</div>
			</div>
			<!-- END PAGE BREADCRUMB -->
			<!-- BEGIN PAGE CONTENT INNER -->
			<div class="portlet light">
				<div class="portlet-body">
					<strong>更新品牌Logo</strong>
					<%if(brands && brands.length >0){%>
					
					<div class="row">
						<div class="col-md-3 profile-sidebar">
						<!-- PORTLET MAIN -->
						<div class="portlet light profile-sidebar-portlet">
							<!-- SIDEBAR USERPIC -->
							<div class="profile-userpic">
								<img src="http://7xkj70.com1.z0.glb.clouddn.com/<%=brands[0].brandPic%>?imageView2/1/w/135/h/135/interlace/1" class="img-responsive" alt="">

							</div>
							<!-- END SIDEBAR USERPIC -->
							<!-- SIDEBAR USER TITLE -->
							<div class="profile-usertitle">
								<div class="profile-usertitle-name">
									 <%=brands[0].brandName%>
								</div>
								
							</div>
							<!-- END SIDEBAR USER TITLE -->
							<!-- SIDEBAR BUTTONS -->
							<div class="profile-userbuttons"><select>
							<%brands.forEach(function(brand,index){%>
								<option id="<%=brand.id%>" data-id="<%=brand.id%>" value="<%=brand.brandName%>"><%=brand.brandName%></option>
								<%})%>
							</select></div>
							<!-- END SIDEBAR BUTTONS -->
							<!-- SIDEBAR MENU -->
							<!-- END MENU -->
						</div>
						<!-- END PORTLET MAIN -->
						<!-- PORTLET MAIN -->
					
						<!-- END PORTLET MAIN -->
					</div>
					
					<div class="profile-content">
						<div class="col-md-12">
							<p>
								<span class="label label-danger">
								提示: </span>
								&nbsp; 左侧侧边栏选择好品牌，拖入图片或者点击上传即可完成品牌Logo更新
							</p>
							<form action="/admin/brand/modify" method="post" ENCTYPE="multipart/form-data"  class="dropzone" id="my-dropzone">
								<input type="text" value="<%=_csrf%>" name="_csrf" id="csrf"  class="hidden"/>
								<input type="text" value="<%=brands[0].id%>" name="id" class="hidden" id="brandid" />
