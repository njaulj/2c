         $("select").change(function(){
         	var brand=$("select").find("option:selected")
        // 	console.log($("select").find("option:selected").data("id"))

         	$(".profile-usertitle-name").text(brand.val())
         	$.ajax({
         		url:'/admin/brand/view/'+brand.data("id"),
         		type:'get',
         		success:function(rbrand){
				         	$(".profile-userpic img").attr('src',"http://7xkj70.com1.z0.glb.clouddn.com/"+rbrand.brandPic+"?imageView2/1/w/135/h/135/interlace/1")
