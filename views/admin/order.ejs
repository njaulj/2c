			<div class="row">
				<div class="col-md-12">
					<!-- Begin: life time stats -->
					<div class="portlet light">
						<div class="portlet-title">
							<div class="caption">
								<input type="text" id="orderid" class="hidden" value="<%=order.id%>" />
																


								<i class="icon-basket font-green-sharp"></i>
								<span class="caption-subject font-green-sharp bold uppercase">
								Order #<%=order.id%> </span>
								<span class="caption-helper"><%=moment(order.createdAt).format('MM DD,YYYY hh:mm:ss')%></span>
							</div>
						</div>
						<div class="portlet-body">
							<div class="tabbable">
								<ul class="nav nav-tabs nav-tabs-lg">
									<li class="active">
										<a href="#tab_1" data-toggle="tab">
										明细 </a>
									</li>
									<li>
										<a href="#tab_4" data-toggle="tab">
										物流 
										</a>
									</li>
									
								</ul>
								<div class="tab-content">
									<div class="tab-pane active" id="tab_1">
										<div class="row">
											<div class="col-md-6 col-sm-12">
												<div class="portlet yellow-crusta box">
													<div class="portlet-title">
														<div class="caption">
															<i class="fa fa-cogs"></i>都败了啥
														</div>
													</div>
													<div class="portlet-body">
														<div class="row static-info">
															<div class="col-md-5 name">
																 订单 #:
															</div>

															<div class="col-md-7 value">
																 <%=order.id%>
															</div>
														</div>
														<div class="row static-info">
															<div class="col-md-5 name">
																 订单生成日期:
															</div>
															<div class="col-md-7 value">
																 <%=moment(order.createdAt).format('MM DD,YYYY hh:mm:ss')%>
															</div>
														</div>
														<div class="row static-info">
															<div class="col-md-5 name">
																 状态更新日期:
															</div>
															<div class="col-md-7 value">
																 <%=moment(order.updatedAt).format('MM DD,YYYY hh:mm:ss')%>
															</div>
														</div>
														<div class="row static-info">
															<div class="col-md-5 name">
																 订单状态:
															</div>
															<div class="col-md-7 value">
																<% var ostatArr=[{'color':'danger','info':'已抛弃'},{'color':'warning','info':'大爷还没给小费呢...'}
                    ,{'color':'info','info':'奴家化个妆...'},{'color':'info','info':'奴家在路上了...'}
                    ,{'color':'success','info':'软玉温香在怀中'}]%>
																<span class="label label-<%=ostatArr[order.state].color%>"><%=ostatArr[order.state].info%>
																 </span>
															</div>
														</div>
														<div class="row static-info">
															<div class="col-md-5 name">
																 总共放了多少血:
															</div>
															<div class="col-md-7 value">
																 $<%=order.total%>
															</div>
														</div>
														
													</div>
												</div>
											</div>
											
											<div class="col-md-6 col-sm-12">
												<div class="portlet red-sunglo box">
													<div class="portlet-title">
														<div class="caption">
															<i class="fa fa-cogs"></i>收件地址
														</div>
													</div>
													<div class="portlet-body">
														<div class="row static-info">
															<div class="col-md-12 value">
																 收件人: <%=order.orderWho%><br>
																 收件地址:<%=order.orderWhere%><br>
																 联系电话: <%=order.orderContact%><br>
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-12 col-sm-12">
												<div class="portlet grey-cascade box">
													<div class="portlet-title">
														<div class="caption">
															<i class="fa fa-cogs"></i>订单明细
														</div>
													</div>
													<div class="portlet-body">
														<div class="table-responsive">
															<table class="table table-hover table-bordered table-striped">
															<thead>
															<tr>
																<th>
																	 啥东西
																</th>
																<th>
																	 规格
																</th>
																<th>
																	 交易价格
																</th>
																<th>
																	市场价
																</th>
																<th>
																	数量
																</th>
																<th>
																	 物流状态
																</th>
																<th>
																	 省了还是亏了
																</th>
																<th>
																	 小计
																</th>
															</tr>
															</thead>
															<tbody>
																<% var dstatArr=[{'color':'danger','info':'已抛弃'},{'color':'warning','info':'大爷还没给小费呢...'}
                    ,{'color':'info','info':'奴家化个妆...'},{'color':'info','info':'奴家在路上了...'}
                    ,{'color':'success','info':'软玉温香在怀中'}]%>
																<%details.forEach(function(detail,index){%>
																	<tr>
																<td>
																	<a href="/item/show/<%=detail.ItemId%>?SKU=<%=detail.PicId%>">
																	<%=detail.Item.name%></a>
																</td>
																<td>
																	<%=detail.Pic.picSku%>
																</td>
																<td>
																	 ¥<%=(detail.price).toFixed(2)%>
																</td>
																<td>
																	 ¥<%=(detail.market).toFixed(2)%>
																</td>
																<td>
																	 <%=detail.amount%>
																</td>
																
																<td>
																	<span class="label label-sm label-<%=dstatArr[detail.state].color%>">
																	<%=dstatArr[detail.state].info%>
																	
																</td>
																<td>
																	 <%var discount=(detail.price-detail.market)%>
																	 <% var disstr=(discount>0)?'亏了¥':'省了¥' %>
																	 <%=disstr+((Math.abs(discount)*detail.amount)).toFixed(2)%>
																</td>
																<td>
																	 ¥<%=(detail.subtotal).toFixed(2)%>
																</td>
															</tr>
																<%})%>
															
															</tbody>
															</table>
														</div>
													</div>
												</div>
											</div>
										</div>
